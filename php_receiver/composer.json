  "type": "project",
  "require": {
    "php": ">=8.3",
    "ext-sockets": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "RtuReceiver\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RtuReceiver\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
